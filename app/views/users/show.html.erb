

<div class="container px-5 px-sm-0">
    <div class="row">
        <%= render 'books/list', book: @book %>
     <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse"> 
        
        <tbody>
         <% @books.each do|book| %>
         <tr>
             <td><%= attachment_image_tag book.user, :profile_image, :fill, 60,60, format:"jpg",fallback: "no_image.jpg" %></td>
             <td><%= link_to book.user.name  %></td>
             <td><%=link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
             
         </tr>
         <%end%>
        </tbody>
     </table>
   </div>
  </div>
</div>