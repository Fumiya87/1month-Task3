<%= render 'books/list', books: @books %>
<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
       <table class="table-hover table-inverse">

          <tbody>
           <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
              <td><%= link_to @user.name user %> </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%=link_to 'Edit',edit_book_path(book.id)%></td>
              <td><%=link_to 'Destroy',books_path %></td>

            </tr>
           <%end%>
          </tbody>