
<div class="container px-5 px-sm-0">
    <div id="error_explannation">
          <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
         <% end %>
    </div>
    <div class="row">
        <%= render 'books/list', book: @book %>
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse"> 
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do|book| %>
         <tr>
             <td><%= attachment_image_tag book.user, :image, :fill, 60,60, format:"jpg",fallback: "no_image.jpg" %></td>
             <td><%= link_to book.user.name  %></td>
             <td><%=link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
         </tr>
         <%end%>
        </tbody>
     </table>
   </div>
  </div>
</div>