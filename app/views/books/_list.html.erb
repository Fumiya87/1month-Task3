
 <div class="container px-5 px-sm-0">
      <div class="row">
       <div class="col-md-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg' %>
         <table class="table">
           <div class="profile-container">
             <tr>
              <th>name</th>
              <th class="profile-name"><%= @user.name %></th>
             </tr>
             <tr>
              <th>introduction</th>
              <th class="profile-name"><%= @user.introduction %></th>
             </tr>
           </div>
         </table>
          <div class="row">
          <%= link_to"edit", edit_user_path(@user) %>
        </div>
      </div>
   </div>
 
   <h2 class="mt-3">New book</h2>

     <%= form_with model: book, url:'/books', local:true do |f| %>
    <h4 class="form-group">Title</h4>
    <%= f.text_field :title %>
    <h4 class="form-group">Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book',class:"btn btn-success" %>
    <% end %>
  </div>
   